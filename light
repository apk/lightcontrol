<script src='http://code.jquery.com/jquery-2.1.4.min.js'></script>
<script type='text/javascript'>

function pos (ev,t,c) {
  var val=Math.round((((ev.pageX - t.offsetLeft) * 255) / t.clientWidth));
  t.innerHTML=" :: " + val;
  $.post("/set",''+val+c);
}
function set(v) {
  $.post("/set",v)
}
</script>
<style type="text/css">
.but {
height: 2.5em;
border: 1px solid black;
border-radius: 1.2em;
}
</style>
